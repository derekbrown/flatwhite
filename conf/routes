# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                            controllers.Application.index()

# Users
GET     /users                       controllers.Users.list()
GET     /users/:username             controllers.Users.findByUsername(username)
GET     /users/createTest            controllers.Users.createTest()
POST    /signup                      controllers.Users.createUser()

# Messages
GET     /messages                    controllers.Messages.list()
GET     /messages/:participant       controllers.Messages.findByParticipant(participant)

# Test Endpoints
GET     /test/create                 controllers.Messages.createTest()
GET     /test/delete                 controllers.Messages.deleteTest()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
